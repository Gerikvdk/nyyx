<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="150dp"
android:layout_margin="5dp"
    android:outlineSpotShadowColor="#03A9F1"
app:cardCornerRadius="7dp"
app:cardElevation="25dp"
app:cardPreventCornerOverlap="true"
app:cardUseCompatPadding="false"
    android:id="@+id/varkggkn">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/jojo"
        style="@style/Widget.MaterialComponents.CardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#515B72"
        android:backgroundTintMode="multiply">


        <com.rey.material.widget.ImageView
            android:id="@+id/product_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/_email"
            android:alpha="0.63"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.rey.material.widget.ImageView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#AD000000">

        </ImageView>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/product_img"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <RelativeLayout
                android:id="@+id/cerfger"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="15dp"



                tools:ignore="MissingConstraints">

                <com.rey.material.widget.TextView
                    android:id="@+id/product_description"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="1dp"
                    android:gravity="start"
                    android:text="ОБЬЯВЛЕНИЕ!"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/white"
                    android:textSize="35sp"
                    app:layout_constraintCircleRadius="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:ignore="RtlSymmetry" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cccae"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_below="@+id/cerfger"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="15dp"
                >


                <com.rey.material.widget.TextView
                    android:id="@+id/price_og"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="start"

                    android:paddingEnd="10dp"
                    android:text="Цена!"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    tools:ignore="RtlSymmetry">

                </com.rey.material.widget.TextView>

            </RelativeLayout>



        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    </com.google.android.material.card.MaterialCardView>


