<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="#373E4E"
    android:gravity="bottom"
    android:orientation="vertical"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_fon"
        >
    </ImageView>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B2373E4E"></ImageView>

    <com.rey.material.widget.ImageView
        android:layout_width="200dp"
        android:layout_height="126dp"
        android:layout_above="@+id/user_profile_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_marginEnd="211dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/ia"
        android:scaleType="fitCenter"></com.rey.material.widget.ImageView>

    <TextView
        android:id="@+id/user_profile_name"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="10dp"
        android:paddingStart="20dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Мы рады видеть вас снова"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@color/white">

    </ImageView>

</RelativeLayout>
