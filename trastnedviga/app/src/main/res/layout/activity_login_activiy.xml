<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/kartinka3"
    tools:context=".ui.LoginActiviy"
    android:id="@+id/layayt">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B7292F3F">

    </ImageView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:outlineSpotShadowColor="#03A9F1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="105dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="165dp"
        app:cardBackgroundColor="#373E4E"
        app:cardCornerRadius="20dp"
        app:cardElevation="50dp"
        app:cardMaxElevation="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_phone_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="260dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="#03A9F1"
                android:clickable="false"
                android:drawableStart="@drawable/custom_smart"
                android:drawablePadding="12dp"
                android:drawableTint="#03A9F1"
                android:foregroundTint="#03A9F1"
                android:hint="Номер телефона"
                android:inputType="number"
                android:padding="20dp"
                android:paddingStart="12dp"
                android:textColor="#4097BC"
                android:textColorHighlight="#4097BC"
                android:textColorHint="#4097BC"
                android:textSize="18sp"
                android:textStyle="bold"
                app:et_dividerColor="#03A9F1"
                app:et_dividerCompoundPadding="true"
                app:et_dividerErrorColor="#000000"
                app:et_labelTextColor="#000000"></com.google.android.material.textfield.TextInputEditText>

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/login_password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="330dp"
                android:layout_marginRight="20dp"

                android:backgroundTint="#03A9F1"
                android:drawableStart="@drawable/custom_lock"
                android:drawablePadding="12dp"
                android:drawableTint="#03A9F1"
                android:foregroundTint="#03A9F1"
                android:hint="Пароль"
                android:inputType="textPassword"
                android:padding="20dp"
                android:paddingStart="12dp"
                android:textColor="#4097BC"
                android:textColorHighlight="#4097BC"
                android:textColorHint="#4097BC"
                android:textSize="18sp"
                android:textStyle="bold"></com.google.android.material.textfield.TextInputEditText>


            <LinearLayout
                android:id="@+id/linear_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/login_password_input"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <com.rey.material.widget.CheckBox
                    android:id="@+id/login_checkbox"
                    style="@style/Material.Drawable.CheckBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:background="#00F8F8F8"
                    android:backgroundTint="#03A9F1"
                    android:backgroundTintMode="multiply"
                    android:buttonTint="#03A9F1"
                    android:buttonTintMode="multiply"
                    android:capitalize="words"
                    android:drawableTint="#03A9F1"
                    android:foregroundTint="#03A9F1"
                    android:gravity="center_vertical"
                    android:text="Запомнить меня"
                    android:textAllCaps="false"
                    android:textColor="#03A9F1"
                    android:textColorHighlight="#03A9F1"
                    android:textColorLink="#03A9F1"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:buttonTintMode="src_atop">


                </com.rey.material.widget.CheckBox>


            </LinearLayout>


            <com.rey.material.widget.Button
                android:id="@+id/join_btn"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/register_password_input"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="90dp"
                android:background="@drawable/roundet_bac"
                android:backgroundTint="#353737"
                android:backgroundTintMode="multiply"
                android:breakStrategy="high_quality"
                android:drawableTint="#330707"
                android:drawableTintMode="multiply"
                android:foregroundTint="#ECE4E4"
                android:text="Войти"
                android:textAllCaps="false"
                android:textColor="#F6F5F5"
                android:textSize="22dp">

            </com.rey.material.widget.Button>


            <TextView
                android:id="@+id/admin_panel_link"
                style="@style/Widget.AppCompat.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/join_btn"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="-60dp"
                android:text="Для adm"
                android:textAllCaps="false"
                android:textColor="#03A9F1"
                android:textSize="15sp"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/not_admin_panel_link"
                style="@style/Widget.MaterialComponents.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/join_btn"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="-60dp"
                android:text="Для клиентов"
                android:textAllCaps="false"
                android:textColor="#03A9F1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:visibility="invisible"></TextView>


            <ImageView
                android:layout_width="400dp"
                android:layout_height="240dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/tytypo">

            </ImageView>


        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>