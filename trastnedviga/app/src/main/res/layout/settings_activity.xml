<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_l"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorNoteColor3">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_sett"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/close_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Закрыть"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:textStyle="bold|italic"
                    android:textSize="17sp"
                    android:layout_alignParentStart="true"
                    >
                </TextView>


                <TextView
                    android:id="@+id/save_set"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Сохранить"
                    android:textColor="@color/black"
                    android:textAllCaps="false"
                    android:textStyle="bold|italic"
                    android:textSize="17sp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="15dp"
                    >
                </TextView>

            </RelativeLayout>

        </com.google.android.material.appbar.MaterialToolbar>


    </com.google.android.material.appbar.AppBarLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_acc_img"
        android:layout_below="@+id/app_bar_l"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"

        >

    </de.hdodenhof.circleimageview.CircleImageView>

    <EditText
        android:id="@+id/settings_full_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_acc_img"
        android:hint="Ваше имя"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"

        android:padding="10dp"
        />


    <EditText
        android:id="@+id/settings_full_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_full_name"
        android:hint="Ваш номер"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"

        android:padding="10dp"
        />

    <EditText
        android:id="@+id/settings_full_adr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_full_phone"
        android:hint="Ваш адрес"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"

        android:padding="10dp"
        />

</RelativeLayout>