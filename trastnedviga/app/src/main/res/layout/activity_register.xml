<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layayt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kartinka3"
    tools:context=".ui.RegisterActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B7292F3F">

    </ImageView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="573dp"

        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="145dp"
        app:cardBackgroundColor="#373E4E"
        app:cardCornerRadius="20dp"
        app:cardElevation="50dp"
        app:cardMaxElevation="50dp"
        android:outlineSpotShadowColor="#03A9F1">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="547dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/register_username_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:backgroundTint="#03A9F1"
                android:drawableStart="@drawable/custom_perm"
                android:drawablePadding="12dp"
                android:drawableTint="#03A9F1"
                android:foregroundTint="#03A9F1"
                android:hint="Имя пользователя"
                android:inputType="text"
                android:padding="15dp"
                android:paddingStart="12dp"
                android:shadowColor="#03A9F1"
                android:textColor="#03A9F1"
                android:textColorHint="#4097BC"
                android:textSize="20sp"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/register_phone_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_username_input"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="25dp"
                android:backgroundTint="#03A9F1"
                android:drawableStart="@drawable/custom_smart"
                android:drawablePadding="12dp"
                android:drawableTint="#03A9F1"
                android:foregroundTintMode="multiply"
                android:hint="Номер телефона"
                android:inputType="number"
                android:padding="15dp"
                android:paddingStart="12dp"
                android:shadowColor="#131313"
                android:textColor="#03A9F1"
                android:textColorHighlight="#03A9F1"
                android:textColorHint="#4097BC"
                android:textSize="20sp"
                android:textStyle="bold" />


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/register_password_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/register_phone_input"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="25dp"
                android:backgroundTint="#03A9F1"
                android:drawableStart="@drawable/custom_lock"
                android:drawablePadding="12dp"
                android:drawableTint="#03A9F1"
                android:foregroundTint="#03A9F1"
                android:hint="Пароль"
                android:inputType="textPassword"
                android:padding="15dp"
                android:paddingStart="12dp"
                android:shadowColor="#03A9F1"
                android:textColor="#03A9F1"
                android:textColorHighlight="#03A9F1"
                android:textColorHint="#4097BC"
                android:textSize="20sp"
                android:textStyle="bold">

            </com.google.android.material.textfield.TextInputEditText>

            <com.rey.material.widget.Button
                android:id="@+id/register_btn"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/register_password_input"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="-119dp"
                android:background="@drawable/roundet_bac"
                android:backgroundTint="#353737"
                android:backgroundTintMode="multiply"
                android:breakStrategy="high_quality"
                android:drawableTint="#330707"
                android:drawableTintMode="multiply"
                android:foregroundTint="#ECE4E4"
                android:text="Зарегистрироваться"
                android:textAllCaps="false"
                android:textColor="#F6F5F5"
                android:textSize="20dp">

            </com.rey.material.widget.Button>

            <ImageView
                android:layout_width="323dp"
                android:layout_height="208dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="200dp"
                android:background="@drawable/tytypo"
                android:elevation="@dimen/app_bar_height"
                android:scaleType="centerCrop"
                android:visibility="visible"
                android:foregroundGravity="center">

            </ImageView>


        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>