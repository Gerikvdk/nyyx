        android:supportsRtl="true"
        android:theme="@style/Theme.TrastNedviga">
        <activity android:name=".ui.Users.Profile" />
        <activity android:name=".ui.Users.ProductActivity" />
        <activity
            android:name=".ui.Users.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity android:name=".ui.Users.ContactActivity" />
        <activity
            android:name=".ui.Users.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.TrastNedviga.NoActionBar" />
        <activity android:name=".ui.Admin.AdminCategoryActivity" />
        <activity android:name=".ui.Admin.AdminAddNewProductActivity" />
        <activity android:name=".ui.RegisterActivity" />
        <activity android:name=".ui.LoginActiviy" />
        <activity android:name=".ui.Users.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>